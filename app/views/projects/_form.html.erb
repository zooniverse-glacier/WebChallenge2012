<%= form_for @project, html: { class: 'form form-horizontal' } do |f| %>
  <%= f.error_messages %>
  
  <div class="control-group">
    <%= f.label :school_id, class: 'control-label' %>
    <div class="controls">
      <%= select :project, :school_id, School.list %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :description, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, rows: 10, cols: 100, style: 'width: 100%' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :cost, class: 'control-label' %>
    <div class="controls">
      <%= f.number_field :cost %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :enabled, class: 'control-label' %>
    <div class="controls">
      <%= f.check_box :enabled %>
    </div>
  </div>
  
  <div class="control-group">
    <div class="controls">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
  
  <div class="control-group">
    <div class="controls">
      <%= link_to "Show", @project, class: 'btn btn-mini' %>&nbsp;&nbsp;
      <%= link_to "View All", projects_path, class: 'btn btn-mini' %>
    </div>
  </div>
<% end %>
