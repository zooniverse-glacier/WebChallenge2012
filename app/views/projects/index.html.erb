<% title "Projects" %>

<table class="table table-hover table-bordered">
  <tr>
    <th>School</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Enabled</th>
    <th colspan="3"></th>
  </tr>
  <% for project in @projects %>
    <tr>
      <td><%= project.school_id %></td>
      <td><%= project.description %></td>
      <td><%= project.cost %></td>
      <td><%= project.enabled %></td>
      <td><%= link_to "Show", project, class: 'btn btn-mini' %></td>
      <td><%= link_to "Edit", edit_project_path(project), class: 'btn btn-mini' %></td>
      <td><%= link_to "Destroy", project, confirm: 'Are you sure?', method: :delete, class: 'btn btn-mini' %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Project", new_project_path, class: 'btn btn-primary' %></p>
