<%= form_for @school do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :stage %><br />
    <%= f.number_field :stage %>
  </p>
  <p>
    <%= f.label :story %><br />
    <%= f.text_area :story %>
  </p>
  <p>
    <%= f.label :enabled %><br />
    <%= f.check_box :enabled %>
  </p>
  <p>
    <%= f.label :position %><br />
    <%= f.number_field :position %>
  </p>
  <p><%= f.submit %></p>
<% end %>
