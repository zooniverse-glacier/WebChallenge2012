<% title "Uploads" %>

<table class="table table-hover table-bordered">
  <tr>
    <th>ID</th>
    <th>Description</th>
    <th>Image</th>
    <th></th>
  </tr>
  <% for upload in @uploads %>
    <tr>
      <td><%= upload.id %></td>
      <td><%= upload.description %></td>
      <td><%= image_tag(upload.image.thumbnail.url) %></td>
      <td><%= link_to "Show", upload, class: 'btn btn-mini' %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Upload", new_upload_path, class: 'btn btn-primary' %></p>
