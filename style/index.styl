// Here we go
@import '../node_modules/nib'
@import 'common'
@import 'schools'
@import url('http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700')
@import url('http://fonts.googleapis.com/css?family=Arvo')
@import "home/section"

button
  width: 150px
  height: 30px
  border: 1px solid rgba(#333, 1)
  border-radius: 3px
  box-shadow: inset 0px 1px 0px rgba(255,255,255,.5), 0px 2px 4px rgba(0,0,0,.3)
  color: #fff
  font-size: 15px
  font-weight: 700
  text-shadow: 0 1px 0 rgba(0,0,0,.4)
  &.blue
    background: #2aa9db
  &.green
    background: #7ed147
  &.large
    width: 230px
    height: 70px
    border-radius: 40px

section
  margin: 70px 105px
  header
    position: relative
    font: 30px "Open Sans Condensed", sans-serif
    text-align: center
    text-transform: uppercase
    &:before
      border-bottom: 1px solid rgba(black, 0.25)
      border-top: 1px solid white
      box-shadow: 0 -1px 0 rgba(black, 0.25), 0 1px 0 white
      content: ""
      height: 3px
      left: 0
      position: absolute
      top: 20px
      width: 100%

    > strong
      background: $content-color
      display: inline-block
      padding: 0 10px;
      position: relative

  article
    text-align: center
    p
      padding: 30px 0

hr
  height: 0
  border-top: 1px solid #cecdc5
  box-shadow 0 1px 0 #fff

ul
  list-style: none
  margin: 0px
  padding: 0px

p
  margin: 8px 0

a
  color: #222
  text-decoration: none

body, html
  background: $bg-color
  color: $text-color
  font-family: $body-font
  padding:0px
  margin: 0px
  height: 100%

#content
  background-color: $content-color
  max-width: 1024px 
  margin: 0 auto 
  width: 90%
  padding: 0 0 50px 0

  > header
    width: 100%
    background-color: $content-color
    color: #222
    height: 81px
    margin-bottom: 2px solid white

    .logo
      margin: 14px 0 0 105px
      
    li
      display: inline-block
      vertical-align: center

#map
  width : $map-width px
  height : $map-height px
  margin : 0px
  padding: 0px
