$image_width = 225px

.people
  clearfix()
  .person
    position: relative
    float: left
    margin: 8px
    background-color: $dark-blue
    box-shadow: 0 0 4px rgba(0,0,0,0.15)
    &:first-child
      margin-left: 0
    &:nth-child(3n)
      margin-right: 0
    &:nth-child(3n+1)
      margin-left: 0
    .image
      border: 3px solid #fff

    .popup
      display: none
      position: absolute
      width: $image_width * 2 - 6
      height: 158px
      padding: 14px 17px
      z-index: 1
      background: rgba(#222, 1)
      box-shadow: 0 0 10px rgba(0,0,0,0.8)
      color: #fafafa
      font-size: 12px
      line-height: 1.3em
      span
        display: block

      $popup-top = 185px
      &.first
        display: block
        top: $popup-top
        left: 0
      &.second
        display: block
        top: $popup-top
        left: 0
      &.third
        display: block
        top: $popup-top
        right: 0

